{
	"plugins": {
		"@release-it/bumper": {
			"out": [
				"brevwoo.php",
				{
					"file": ".cliff/cliff-readme-txt.toml",
					"type": "text/plain"
				}
			]
		}
	},
	"hooks": {
		"after:bump": ["node .cliff/build-changelogs.js"]
	},
	"git": {
		"commitArgs": ["-S"],
		"tagArgs": ["-s"]
	},
	"npm": {
		"publish": false
	},
	"github": {
		"release": true,
		"releaseName": "${version}"
	}
}
